Ejercicio Propuesto
#######################################################
import java.util.Scanner;

public class ValidadorContraseña {

    static boolean validarContraseña(String contraseña) {
        if (contraseña.length() < 8) return false;
        if (contraseña.contains(" ")) return false;

        boolean tieneMayus = false;
        boolean tieneMinus = false;
        boolean tieneNumero = false;
        boolean tieneEspecial = false;

        for (char c : contraseña.toCharArray()) {
            if (Character.isUpperCase(c)) tieneMayus = true;
            else if (Character.isLowerCase(c)) tieneMinus = true;
            else if (Character.isDigit(c)) tieneNumero = true;
            else tieneEspecial = true;
        }

        return tieneMayus && tieneMinus && tieneNumero && tieneEspecial;
    }

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        String contraseña1, contraseña2;

        while (true) {
            System.out.print("Ingrese la contraseña: ");
            contraseña1 = sc.nextLine();
            System.out.print("Confirme la contraseña: ");
            contraseña2 = sc.nextLine();

            if (!contraseña1.equals(contraseña2)) {
                System.out.println("Error: Las contraseñas no coinciden. Intente de nuevo.\n");
                continue;
            }

            if (!validarContraseña(contraseña1)) {
                System.out.println("Error: La contraseña no cumple con los requisitos.\n");
                System.out.println("Requisitos:\n- Mínimo 8 caracteres\n- Sin espacios\n- Al menos una mayúscula\n- Al menos una minúscula\n- Al menos un número\n- Al menos un carácter especial\n");
                continue;
            }

            System.out.println("contraseña válida y confirmada");
            break;
        }
    }
}
